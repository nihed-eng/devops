pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "nihedmath/devops:1.0"
    }

    stages {
        stage('Checkout GIT') {
            steps {
                echo 'Pulling...'
                git branch: 'master',
                    url: 'https://github.com/nihed-eng/devops.git'
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                sh 'docker login -u nihedmath -p nihed.2024'
                sh 'docker push $DOCKER_IMAGE'
            }
        }
    }
}
